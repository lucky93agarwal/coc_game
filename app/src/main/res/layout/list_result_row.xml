<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:paddingLeft="@dimen/_2sdp"
    android:paddingRight="@dimen/_2sdp"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="@dimen/_8sdp"
        android:layout_margin="5dp"
        app:cardBackgroundColor="#ebebeb"

        card_view:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:background="@drawable/earntwolayout"
            android:padding="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Winner"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif"
                        android:textColor="#fff"
                        />
                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/shyam"
                        android:gravity="center">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivwinprofile"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            app:srcCompat="@drawable/logo" />
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Username"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:id="@+id/textView"
                        android:textSize="@dimen/_11ssp"
                        android:visibility="gone"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/white"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Username"
                        android:id="@+id/winnername"
                        android:maxLines="1"
                        android:fontFamily="sans-serif"
                        android:textColor="#fff"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/mypoint"
                        android:paddingBottom="@dimen/_2sdp"
                        android:paddingTop="@dimen/_2sdp"
                        android:paddingRight="@dimen/_5sdp"
                        android:paddingLeft="@dimen/_5sdp"
                        android:visibility="gone"
                        android:text="My Point"
                        android:fontFamily="sans-serif"
                        android:background="#00902E"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textSize="@dimen/_11ssp"
                        android:textColor="@color/white"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="S :-"
                            android:fontFamily="sans-serif"
                            android:textColor="#fff"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Points"
                            android:fontFamily="sans-serif"
                            android:visibility="gone"
                            android:textSize="@dimen/_11ssp"
                            android:id="@+id/textView2"
                            android:textColor="@color/white" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" Points"
                            android:fontFamily="sans-serif"
                            android:id="@+id/winnerpoint"
                            android:textColor="#fff" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Winning"
                        android:textColor="#fff"
                        android:gravity="center"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:text="10"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:fontFamily="sans-serif"
                        android:background="@drawable/blankorange"
                        android:textStyle="bold"
                        android:id="@+id/textView3"
                        android:textColor="#fff"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Entry Fee"
                        android:textColor="#fff"
                        android:gravity="center"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:fontFamily="sans-serif"
                        android:background="@drawable/blankpurple"
                        android:text="6"
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="2.5"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Looser"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif"
                        android:textColor="#fff"
                        />

                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/ramram">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivloginuserprofile"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="right"
                            app:srcCompat="@drawable/logo" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Username "
                        android:id="@+id/loosername"
                        android:maxLines="1"
                        android:fontFamily="sans-serif"
                        android:textColor="#fff"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Timer"
                        android:textSize="@dimen/_12ssp"
                        android:drawablePadding="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textStyle="bold"
                        android:visibility="gone"
                        android:fontFamily="sans-serif"
                        android:layout_gravity="left"
                        android:id="@+id/textView4"
                        android:textColor="#9B0000"
                        />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Entry Fees"
                        android:textSize="@dimen/_11ssp"
                        android:visibility="gone"
                        android:fontFamily="sans-serif"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_gravity="left"
                        android:textStyle="bold"
                        android:textColor="#9B0000"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="S :-"

                            android:fontFamily="sans-serif"
                            android:textColor="#fff"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Points"
                            android:fontFamily="sans-serif"
                            android:id="@+id/looserpoint"
                            android:textColor="#fff"
                            />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="4"
                android:visibility="gone"
                android:padding="@dimen/_10sdp"
                android:id="@+id/l1"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:background="#971B1F"
                    android:orientation="vertical"
                    android:padding="@dimen/_5sdp"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Winner Name"
                        android:fontFamily="sans-serif"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textSize="@dimen/_11ssp"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:id="@+id/textView6"
                        android:textColor="@color/white"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    android:background="#00902E"
                    android:padding="@dimen/_5sdp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Winner Point"
                        android:textAlignment="center"
                        android:fontFamily="sans-serif"
                        android:textSize="@dimen/_11ssp"
                        android:layout_gravity="center"
                        android:id="@+id/textView7"
                        android:textColor="@color/white"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layoutwait"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:background="#971B1F"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:text="WAIT FOR ANYONE TO JOIN YOUR Contest"
                    android:fontFamily="sans-serif"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="@dimen/_11ssp" />



            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutwin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:background="@drawable/shareandearnlayout"
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp">

                    <TextView
                        android:id="@+id/txtquit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_5sdp"
                        android:fontFamily="sans-serif"
                        android:text="QUIT"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:textColor="#fff" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:orientation="vertical"
                    android:background="@drawable/strikerslayout"
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp">

                    <TextView
                        android:id="@+id/txtcontinue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_5sdp"
                        android:text="CONTINUE"
                        android:fontFamily="sans-serif"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:textColor="#fff" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>