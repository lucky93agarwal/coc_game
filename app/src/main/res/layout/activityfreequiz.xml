<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eb1c30"
    android:orientation="vertical"
    tools:context="com.challengers.of.call.Signin">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/l1"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80sdp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/questionno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/customizebuttonwhite"
                    android:textSize="@dimen/_12ssp"
                    android:fontFamily="sans-serif"
                    android:padding="@dimen/_5sdp"
                    android:text="" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:fontFamily="sans-serif"
                    android:text="Question"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fitsSystemWindows="true">
                    <ProgressBar
                        android:id="@+id/progressbar_timerview"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="@dimen/_280sdp"
                        android:layout_height="@dimen/_280sdp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_horizontal|bottom"
                        android:indeterminate="false"
                        android:progressDrawable="@drawable/circleshape2_timerview" />

                    <TextView
                        android:id="@+id/tvTimer"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:alpha="0.9"
                        android:background="@drawable/circleshape_timerview"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:text="10"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_20ssp"
                        android:textStyle="bold" />

                    <ProgressBar
                        android:id="@+id/progressbar1_timerview"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="@dimen/_280sdp"
                        android:layout_height="@dimen/_280sdp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_horizontal|center"
                        android:indeterminate="false"
                        android:progressDrawable="@drawable/circleshape1_timerview"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Score"
                    android:textColor="@color/white"
                    android:fontFamily="sans-serif"
                    android:textSize="@dimen/_12ssp" />
                <TextView
                    android:id="@+id/txtscore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:background="@drawable/customizebuttonwhite"
                    android:gravity="right"
                    android:padding="@dimen/_5sdp"
                    android:fontFamily="sans-serif"
                    android:text="0/100"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:id="@+id/layoutoption"
            android:padding="@dimen/_10sdp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp">
                <TextView
                    android:id="@+id/txtquestion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginTop="@dimen/_20sdp"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16ssp" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:id="@+id/cardview"
                app:cardBackgroundColor="@color/white"
                card_view:cardElevation="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                card_view:cardUseCompatPadding="true">
                <TextView
                    android:id="@+id/optiona"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:gravity="center_vertical"
                    android:layout_margin="@dimen/_2sdp"
                    android:fontFamily="sans-serif"
                    android:paddingLeft="@dimen/_10sdp"
                    android:textSize="@dimen/_13ssp"
                    android:text=""
                    android:textColor="#9b0000"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                android:id="@+id/cardview2"
                app:cardBackgroundColor="@color/white"
                card_view:cardElevation="@dimen/_5sdp"
                card_view:cardUseCompatPadding="true">
                <TextView
                    android:id="@+id/optionb"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_margin="@dimen/_2sdp"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/_10sdp"
                    android:fontFamily="sans-serif"
                    android:text=""
                    android:textSize="@dimen/_13ssp"
                    android:textColor="#9b0000"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                android:id="@+id/cardview3"
                app:cardBackgroundColor="@color/white"
                card_view:cardElevation="@dimen/_5sdp"
                card_view:cardUseCompatPadding="true">
                <TextView
                    android:id="@+id/optionc"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/_10sdp"
                    android:layout_margin="@dimen/_2sdp"
                    android:fontFamily="sans-serif"
                    android:text=""
                    android:textSize="@dimen/_13ssp"
                    android:textColor="#9b0000"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                android:id="@+id/cardview4"
                app:cardBackgroundColor="@color/white"
                card_view:cardUseCompatPadding="true">

                <TextView
                    android:id="@+id/optiond"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/_10sdp"
                    android:layout_margin="@dimen/_2sdp"
                    android:text=""
                    android:fontFamily="sans-serif"
                    android:textSize="@dimen/_13ssp"
                    android:textColor="#9b0000"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/bottom_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:gravity="bottom">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:weightSum="4">

                <RelativeLayout
                    android:id="@+id/sljfslj"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/achievement_bg">

                    <ImageView
                        android:id="@+id/fifty_fifty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        app:srcCompat="@drawable/fifty"
                        android:background="@drawable/achievement_bg"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:visibility="gone"
                    android:background="@drawable/logout_bg">

                    <ImageView
                        android:id="@+id/skip_quation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        app:srcCompat="@drawable/skip" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginStart="10dp"
                    android:visibility="gone"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/setting_bg">

                    <ImageView
                        android:id="@+id/audience_poll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        app:srcCompat="@drawable/audiance" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:visibility="gone"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/leaderboard_bg">

                    <ImageView
                        android:id="@+id/reset_timer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        app:srcCompat="@drawable/timer" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:id="@+id/l2"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:id="@+id/imageView"/>


    </LinearLayout>


</LinearLayout>