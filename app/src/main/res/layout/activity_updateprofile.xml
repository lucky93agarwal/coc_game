<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@drawable/backgroundimg"
    tools:context="com.challengers.of.call.Updateprofile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight=".1"
        android:background="@drawable/headerlayout">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivback"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:visibility="gone"
                            android:layout_margin="10dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/leftarrow" />

                        <TextView
                            android:id="@+id/username"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:fontFamily="@font/chewys"
                            android:text="UPDATE PROFILE"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".9"
        android:weightSum="8"
        android:padding="20dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/editText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#052539"
                android:focusableInTouchMode="true"
                android:hint="Mobile No."
                android:paddingLeft="10dp"
                android:layout_margin="5dp"
                android:singleLine="true"
                android:enabled="false"
                android:text=""
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="14sp" />
            <EditText
                android:id="@+id/editText2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:background="#052539"
                android:focusableInTouchMode="true"
                android:editable="false"
                android:hint="Name"
                android:enabled="false"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="14sp" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your DOB"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"/>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#052539"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editText3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".9"
                android:focusableInTouchMode="false"
                android:backgroundTint="@android:color/transparent"
                android:editable="false"
                android:hint="DOB"
                android:paddingLeft="10dp"
                android:text=""
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="14sp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:elevation="1000dp"
                android:id="@+id/ivdob"
                android:translationZ="10dp"
                app:srcCompat="@drawable/ic_calender" />

        </LinearLayout>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:weightSum="1"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:id="@+id/radioGroup"
            >

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:id="@+id/radioButton"
                android:layout_weight=".2"
                android:layout_gravity="center_horizontal"
                android:buttonTint="@color/white"
                android:textStyle="bold"
                android:fontFamily="@font/caveat_brush"
                android:textColor="@color/white"
                android:checked="true"
                android:textSize="12sp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"
                android:id="@+id/radioButton2"
                android:textColor="@color/white"
                android:buttonTint="@color/white"
                android:textStyle="bold"
                android:fontFamily="@font/caveat_brush"
                android:layout_gravity="center_horizontal"
                android:checked="false"
                android:textSize="12sp"
                android:layout_weight="0.13" />
        </RadioGroup>
        <Button
            android:id="@+id/btnsave"
            android:layout_width="250dp"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="0.7"
            android:background="@drawable/playlayout"
            android:text="Update"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="#fff" />
        <LinearLayout
            android:id="@+id/heading"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical"
            android:visibility="gone"
            android:gravity="center"
            android:layout_weight="0.5">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update Password"
                android:textStyle="bold"
                android:textColor="@color/white"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/oldpas"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="gone"
            android:background="#052539"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/oldpass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#052539"
                android:focusableInTouchMode="true"
                android:hint="Enter Old Password"
                android:inputType="textPassword"
                android:padding="@dimen/_10sdp"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="@dimen/_14ssp" /></LinearLayout>

        <LinearLayout
            android:id="@+id/newpas"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="gone"
            android:background="#052539"
            android:layout_margin="5dp"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/newpass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#052539"

                android:focusableInTouchMode="true"
                android:hint="Enter New Password"
                android:padding="@dimen/_10sdp"
                android:singleLine="true"
                android:inputType="textPassword"
                android:text=""
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="@dimen/_14ssp" /></LinearLayout>
        <LinearLayout
            android:id="@+id/renewpas"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="gone"
            android:layout_margin="5dp"
            android:background="#052539"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/renewpass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#052539"
                android:focusableInTouchMode="true"
                android:hint="Re-enter New Password"
                android:padding="@dimen/_10sdp"
                android:singleLine="true"
                android:inputType="textPassword"

                android:text=""
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="@dimen/_14ssp" /></LinearLayout>

        <Button
            android:id="@+id/btncontest"
            android:layout_width="250dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:visibility="gone"
            android:layout_weight="0.7"
            android:background="@drawable/playlayout"

            android:text="Change Password"
            android:textColor="#fff"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>