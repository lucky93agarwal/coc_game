<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.challengers.of.call.Signin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backgroundimg"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:layout_margin="10dp"
            android:text="Here you can create your own contest by filling your entry fee"
            android:textAlignment="center"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="#052539"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:weightSum="1"
                android:fontFamily="sans-serif">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_weight=".5"
                    android:gravity="center">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ENTRY FEE"
                        android:textColor="#fff"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight=".5"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/editText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_1sdp"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:focusableInTouchMode="true"
                        android:gravity="center"
                        android:textCursorDrawable="@color/black"
                        android:textColorHint="@color/black"
                        android:inputType="numberDecimal"
                        android:maxLength="4"
                        android:padding="8dp"
                        android:singleLine="true"
                        android:textColor="#000"
                        android:layout_margin="5dp"
                        android:text=""
                        android:layout_gravity="center"
                        android:textSize="@dimen/_12ssp" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#052539"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:weightSum="1"
                android:fontFamily="sans-serif"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_weight=".5"
                    android:gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="WINNING AMOUNT"
                        android:textColor="#fff"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight=".5"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/editText2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_1sdp"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:focusableInTouchMode="false"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColorHint="@color/black"
                        android:textColor="#000"
                        android:layout_margin="5dp"
                        android:inputType="numberDecimal"
                        android:maxLength="4"
                        android:padding="8dp"
                        android:singleLine="true"
                        android:text="" />

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btncontest"
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/caveat_brush"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@drawable/playlayout"
                    android:textSize="@dimen/_14ssp"
                    android:text="Create Contest"
                    android:textStyle="bold"
                    android:textColor="#fff" />
                </LinearLayout>
                <ImageView
                    android:id="@+id/info"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/info"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>