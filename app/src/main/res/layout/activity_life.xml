        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="3.5"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
