                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_weight="6">


                                    </LinearLayout>


                                </LinearLayout>

                                <LinearLayout
