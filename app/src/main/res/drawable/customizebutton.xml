<?xml version="1.0" encoding="utf-8"?>
<!--  res/drawable/edittext_rounded_corners.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" android:state_focused="true">
        <shape>
            <gradient
                android:startColor="#6D0303"
                android:centerColor="#68050B"
                android:endColor="#6D0303"
                android:angle="45"
                android:centerX="35%"
                />
            <stroke
                android:width="1.3dp"
                android:color="#FFF" />
        </shape>
        <padding
            android:left="0dp"
            android:top="0dp"
            android:right="0dp"
            android:bottom="0dp"
            />
        <size
            android:width="270dp"
            android:height="60dp"
            />
    </item>
