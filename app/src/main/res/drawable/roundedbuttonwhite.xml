<?xml version="1.0" encoding="utf-8"?>
<!--  res/drawable/edittext_rounded_corners.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:state_focused="true">
        <shape>
            <gradient
                android:startColor="#2f1167"
                android:centerColor="#2f1167"
                android:endColor="#2f1167"
                android:angle="45"
                android:centerX="35%"
                />
            <stroke
                android:width="2.3dp"
                android:color="#F04F45" />
            <corners
                android:radius="15dp" />
        </shape>
        <padding
            android:left="0dp"
            android:top="0dp"
            android:right="0dp"
            android:bottom="0dp"
            />
        <size
            android:width="270dp"
            android:height="60dp"
            />
    </item>
    <item android:state_pressed="true" android:state_focused="false">
        <shape>
            <gradient
                android:startColor="#2f1167"
                android:centerColor="#2f1167"
                android:endColor="#2f1167"
                android:angle="45"
                android:centerX="35%"
                />
            <stroke
                android:width="2.3dp"
                android:color="#F04F45" />
            <corners
                android:radius="15dp" />
        </shape>

        <padding
            android:left="0dp"
            android:top="0dp"
            android:right="0dp"
            android:bottom="0dp"
            />
        <size
            android:width="270dp"
            android:height="60dp"
            />
    </item>
    <item android:state_pressed="false" android:state_focused="true">
        <shape>
            <gradient
                android:startColor="#2f1167"
                android:centerColor="#2f1167"
                android:endColor="#2f1167"
                android:angle="45"
                android:centerX="35%"
                />
            <stroke
                android:width="2.3dp"
                android:color="#F04F45" />
            <corners
                android:radius="15dp" />
        </shape>
    </item>
    <item android:state_pressed="false" android:state_focused="false">
        <shape>
            <gradient
                android:startColor="#2f1167"
                android:centerColor="#2f1167"
                android:endColor="#2f1167"
                android:angle="45"
                android:centerX="35%"
                />
            <stroke
                android:width="2.3dp"
                android:color="#F04F45" />
            <corners
                android:radius="30dp" />
        </shape>
        <padding
            android:left="0dp"
            android:top="0dp"
            android:right="0dp"
            android:bottom="0dp"
            />
        <size
            android:width="270dp"
            android:height="60dp"
            />
    </item>
    <item android:state_enabled="true">
        <shape>
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp"
                />
        </shape>
    </item>
</selector>
